{
  "name": "subcrypt",
  "version": "1.0.3",
  "main": "dist/index.js",
  "homepage": "https://github.com/orsinium-labs/subcrypt",
  "keywords": [
    "security",
    "crypto",
    "rsa",
    "aes",
    "signing"
  ],
  "author": "orsinium",
  "license": "MIT",
  "description": "Type-safe cross-environment encryption library",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "babel-jest": "^30.1.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jiti": "^2.6.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
